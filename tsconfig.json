{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "es2017",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@/controllers/*": [
        "controllers/*"
      ],
      "@/interfaces/*": [
        "interfaces/*"
      ],
      "@/middlewares/*": [
        "middlewares/*"
      ],
      "@/routes/*": [
        "routes/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/validators/*": [
        "validators/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
